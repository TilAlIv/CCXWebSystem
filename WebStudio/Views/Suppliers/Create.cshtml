@model WebStudio.ViewModels.CreateSupplierViewModel

@{
    ViewBag.Title = "Добавление поставщика";
    Layout = "_Layout";
}

<h4>@ViewBag.Title</h4>
<form asp-controller="Suppliers" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group mt-2">
        <label asp-for="Name" class="">Название:</label><br>
        <input asp-for="Name" class="col-4" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Email" class="">Email:</label><br>
        <input asp-for="Email" class="col-4" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Website" class="">Сайт:</label><br>
        <input asp-for="Website" class="col-4" />
    </div>
    <div class="form-group mt-2">
        <label asp-for="PhoneNumber" class="">Телефон: </label><br>
        <input asp-for="PhoneNumber" class="col-4" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="Address" class="">Адрес:</label><br>
        <input asp-for="Address" class="col-4" />
        <span asp-validation-for="Address"></span>
    </div>
    
    <div class="form-group mt-2">
        <label asp-for="Tags" class="">Тэги:</label><br>
        <textarea asp-for="Tags" class="col-4" rows="5" cols="50" placeholder="введите тэги"> </textarea>
        <span asp-validation-for="Tags"></span>
    </div>
    
    <hr>
    
    <button type="submit" class="btn btn-outline-primary ml-3 my-3">Добавить</button>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}