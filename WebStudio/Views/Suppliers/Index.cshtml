@using System.Text
@model System.Collections.Generic.List<WebStudio.Models.Supplier>

@{
    ViewBag.Title = "База поставщиков";
    Layout = "_Layout";
    var count =1;
}

<h4 class="my-3">@ViewBag.Title</h4>
<a asp-controller="Suppliers" asp-action="Create">Добавить нового поставщика</a>
<table class="table my-3">
    <thead>
    <tr>
        <th>№</th>
        <th>Название</th>
        <th>Email</th>
        <th>Телефон</th>
        <th>Сайт</th>
        <th>Адрес</th>
        <th>Тэги</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (@Model.Count != 0)
    {
        @foreach (var supplier in @Model)
        {
            <tr>
                <td>@(@count++)</td>
                <td>@supplier.Name</td>
                <td>@supplier.Email</td>
                <td>@supplier.PhoneNumber</td>
                <td><a href="@supplier.Website"></a></td>
                <td>@supplier.Address</td>
                <td>
                    @if (@supplier.Tags.Count != 0)
                    {
                        @foreach (var tag in @supplier.Tags)
                        {
                            @(@tag + " ")
                        }
                    }
                </td>
                <td><a asp-action="Edit" asp-route-id="@supplier.Id">Редактировать</a></td>
                <td><a asp-action="Delete" asp-route-id="@supplier.Id">Удалить</a></td>
            </tr>
        }
    }
    else
    {
        @*<tr>Не добавлено поставщиков</tr>*@
    }
    </tbody>
</table>

