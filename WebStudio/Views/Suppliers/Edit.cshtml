@model WebStudio.ViewModels.CreateSupplierViewModel

@{
    ViewBag.Title = "Редактирование поставщика";
    Layout = "_Layout";
}

<h4 class="my-4">@ViewBag.Title</h4>
<form asp-controller="Suppliers" asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" value="@Model.Id">
    <div class=" mt-2">
        <label asp-for="Name" class="control-label">Название:</label>
        <span asp-validation-for="Name"></span><br>
        <input asp-for="Name" class="col-4" value="@Model.Name">
    </div>

    <div class=" mt-2">
        <label asp-for="Email" class="control-label">Email:</label>
        <span asp-validation-for="Email"></span><br>
        <input asp-for="Email" class="col-4" value="@Model.Email">
    </div>

    <div class=" mt-2">
        <label asp-for="Website" class="control-label">Сайт:</label>
        <span asp-validation-for="Website"></span><br>
        <input asp-for="Website" class="col-4" value="@Model.Website">
    </div>
    <div class=" mt-2">
        <label asp-for="PhoneNumber" class="control-label">Телефон:</label>
        <span asp-validation-for="PhoneNumber"></span><br>
        <input asp-for="PhoneNumber" class="col-4" value="@Model.PhoneNumber">
    </div>
    <div class=" mt-2">
        <label asp-for="Address" class="control-label">Адрес:</label>
        <span asp-validation-for="Address"></span><br>
        <input asp-for="Address" class="col-4" value="@Model.Address">
    </div>
    <div class=" mt-2">
        <label asp-for="Tags" class="control-label">Тэги:</label>
        <span asp-validation-for="Tags"></span><br>
        <textarea asp-for="Tags" class="col-4" rows="5" cols="50" value="@Model.Tags"></textarea>
    </div>
    <button type="submit" class="btn-sm btn-outline-primary ml-3 my-2">Редактировать</button>
</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
