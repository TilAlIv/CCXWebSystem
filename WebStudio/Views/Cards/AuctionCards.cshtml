@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Bootstrap4.Core
@model X.PagedList.IPagedList<CardClone>

@{
    ViewBag.Title = "База проведенных торгов";
    Layout = "_Layout";
}

@{
    var count = 1;
}

<h2>База проведенных торгов</h2>
<div class="container">
    <div class="col-md-12">
        <form method="get" class="mt-3 mb-5" style="border: 1px dotted lightslategrey; border-radius: 8px;">
            <div class="form-inline form-group justify-content-center">
                <div class="m-3">
                    <label class="control-label">Фильтровать по </label>
                    <select name="filterOrder" id="filterOrder">
                        <option value="All">По умолчанию</option>
                        <option value="Number">Номер лота</option>
                        <option value="CardSummDesc">Сумма лота по убыванию</option>
                        <option value="CardSummAsc">Сумма лота по возрастанию</option>
                    </select>
                </div>
                <div class="m-3">
                    <label class="control-label">Фильтровать по ответственному</label>
                    <input class="control-label col-xl-12" type="text" name="executorName" placeholder="Введите имя или фамилию">
                </div>
                <div class="my-auto pt-3">
                    <input type="submit" class="btn btn-outline-primary" value="Отфильтровать">
                </div>
            </div>
        </form>
        <table class="table">
            <thead class="thead-light">
            <tr>
                <th scope="col">№п/п</th>
                <th scope="col">Номер лота</th>
                <th scope="col">Название лота</th>
                <th scope="col">Сумма лота</th>
                <th scope="col">Ответственный</th>
                <th scope="col">Статус</th>
            </tr>
            </thead>
            @foreach (var card in Model)
            {
                <tbody>
                <tr>
                    <th scope="row">@(count++)</th>
                    <td>@card.Number</td>
                    <td>@card.Name</td>
                    <td>@card.StartSumm</td>
                    <td>@card.Executor.Name @card.Executor.Surname</td>
                    <td>@card.CardState</td>
                </tr>
                </tbody>
            }
        </table>
    </div>
</div>
<p class="text-center">Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount </p>
<div class="row justify-content-center">
    @Html.PagedListPager(Model, page => Url.Action("AuctionCards", "Cards", 
        new { page, filterOrder = ViewBag.filterOrder, executorName = ViewBag.executorName }), Bootstrap4PagedListRenderOptions.Classic)
</div>